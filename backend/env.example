# Sales Academy API - Environment Configuration
# Copy this file to .env and fill in the values

# Server
NODE_ENV=production
PORT=4000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_COOKIE_NAME=sales_academy_refresh

# CORS - Frontend URL(s) separated by comma
CORS_ORIGIN=https://your-frontend.vercel.app

# n8n Webhook for AI Chat (optional)
N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/your-webhook

# File Uploads
UPLOAD_DIR=uploads
UPLOAD_MAX_FILE_SIZE=10485760
